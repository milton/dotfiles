set nocompatible

filetype on
filetype plugin on
filetype indent on

set encoding=utf-8
set fileencoding=utf-8

syntax enable
set cindent
set nopaste
set tabstop=4 softtabstop=0 noexpandtab shiftwidth=4
set autoindent
set smartindent

set backspace=2
set whichwrap+=<,>,h,l,[,]

set number
set numberwidth=5

set incsearch

" gvim font
" set guifont=Liberation\ Mono:h10

" gvim hide toolbar
" set guioptions-=T

colorscheme default
